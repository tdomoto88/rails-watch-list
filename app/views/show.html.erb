<h1><%= @list.name %></h1>

<h2>Movies</h2>
<ul>
  <% @list.movies.each do |movie| %>
    <li><%= movie.title %> - <%= movie.rating %></li>
  <% end %>
</ul>

<h2>Add a Movie</h2>
<%= form_with(model: [@list, @bookmark]) do |form| %>
  <div class="field">
    <%= form.label :movie_id %>
    <%= form.collection_select :movie_id, Movie.all, :id, :title %>
  </div>
  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back to lists', lists_path %>
